<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin"
    android:clickable="true"
    card_view:cardBackgroundColor="#8B8B00"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/forecast_icon"
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                />

            <RelativeLayout
                android:layout_marginLeft="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/forecast_date"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日"/>

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/forecast_temp"
                    android:layout_below="@+id/forecast_date"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="5° 13°"/>

                <TextView

                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/forecast_temp"
                    android:id="@+id/forecast_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="少云。最高12℃。东北风 10 到 15 km/h"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/forecast_icon1"
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                />

            <RelativeLayout
                android:layout_marginLeft="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/forecast_date1"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日"/>

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/forecast_temp1"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="5° 13°"/>

                <TextView

                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/forecast_date1"
                    android:id="@+id/forecast_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="少云。最高12℃。东北风 10 到 15 km/h"/>

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/forecast_icon2"
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                />

            <RelativeLayout
                android:layout_marginLeft="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/forecast_date2"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日"/>

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/forecast_temp2"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="5° 13°"/>

                <TextView

                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/forecast_date2"
                    android:id="@+id/forecast_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="少云。最高12℃。东北风 10 到 15 km/h"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/forecast_icon3"
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                />

            <RelativeLayout
                android:layout_marginLeft="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/forecast_date3"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日"/>

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/forecast_temp3"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="5° 13°"/>

                <TextView

                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/forecast_date3"
                    android:id="@+id/forecast_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="少云。最高12℃。东北风 10 到 15 km/h"/>

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>